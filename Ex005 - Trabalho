        media = (n1+n2+n3)/3;
        System.out.println("a media Ã©: "+ media);
        if (media >= 0 && media <= 3){
                System.out.println("reprovado, nota: "+ media);
                }else if (media >= 3 && media <= 7){
                    System.out.println("exame final, nota: "+ media);
