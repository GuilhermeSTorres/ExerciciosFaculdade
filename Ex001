/*
 * Exercicio de pagamento de boletos com desconto de salario
 */
package com.mycompany.exerciciosfaculdade;
import java.util.Scanner;
/**
 *
 * @author Guilherme
 */
public class ex002 {
    public static void main(String[] args) {
       Scanner teclado = new Scanner(System.in);
       float b1, b2, b3, b4, salario, soma, total, desconto;
        System.out.println("Digite o primeiro valor do boleto: ");
        b1 = teclado.nextFloat();
        System.out.println("Digite o valor do segundo boleto: ");
        b2 = teclado.nextFloat();
        System.out.println("Digite o valor do terceiro boleto: ");
        b3 = teclado.nextFloat();
        System.out.println("Digite o valor do quarto boleto: ");
        b4 = teclado.nextFloat();
        System.out.println("Digite o valor do seu salario: ");
        salario = teclado.nextFloat();
        soma = b1+b2+b3+b4;
        desconto = salario-(salario*14/100);
        total = desconto-soma;
        if (total > 0) {
            System.out.printf("O total a se pagar é de R$%.2f e com desconto do seu salario vai sobrar R$%.2f", soma, total);
        }else{
            System.out.printf("O total a se pagar é de R$%.2f e com desconto do seu salario vai faltar R$%.2f", soma, total);
        }
    }
}
