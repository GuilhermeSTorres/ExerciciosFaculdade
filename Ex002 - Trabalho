/*
 * Faça um algoritmo/programa para receber um número qualquer e informar na tela se é par ou impar
 */
package com.mycompany.exerciciosfaculdade;
import java.util.Scanner;
/**
 *
 * @author Guilherme
 */
public class ex004 {
    public static void main(String[] args) {
        Scanner teclado = new Scanner(System.in);
        int n1;
        System.out.println("Digite um valor qualquer: ");
        n1 = teclado.nextInt();
        if (n1 % 2 == 0){
            System.out.println("Valor informado é PAR");
        }else{
            System.out.println("Valor informado é IMPAR");
            
        }
    }
}
